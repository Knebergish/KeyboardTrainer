<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox minHeight="250.0" minWidth="600" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="KeyboardTrainer.forms.controllers.UsersManagerController">
    <GridPane alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <ListView fx:id="usersListView" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="7.0" left="10.0" right="5.0"/>
            </GridPane.margin>
        </ListView>
        <TextField fx:id="searchTextField" promptText="Поиск">
            <GridPane.margin>
                <Insets left="10.0" right="5.0"/>
            </GridPane.margin>
        </TextField>
    </GridPane>
    <Separator orientation="VERTICAL" prefWidth="0.0">
        <HBox.margin>
            <Insets left="5.0" right="5.0"/>
        </HBox.margin>
    </Separator>
    <GridPane alignment="CENTER_RIGHT" GridPane.columnIndex="2" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Информация об аккаунте" GridPane.halignment="CENTER" GridPane.valignment="TOP">
            <font>
                <Font size="18.0"/>
            </font>
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </Label>
        <GridPane GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="deleteButton" mnemonicParsing="false" text="Удалить">
                <GridPane.margin>
                    <Insets left="1.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="saveButton" mnemonicParsing="false" text="Сохранить" GridPane.columnIndex="1"
                    GridPane.halignment="RIGHT">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Button>
        </GridPane>
        <GridPane maxHeight="70.0" minHeight="70.0" prefHeight="70.0" prefWidth="292.0" style="-fx-border-color: black;"
                  GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="45.0" minWidth="45.0" prefWidth="45.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="10.0" prefWidth="218.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <GridPane.margin>
                    <Insets top="5.0"/>
                </GridPane.margin>
                <Label text="Логин:"/>
                <Label fx:id="loginLabel" GridPane.columnIndex="1"/>
            </GridPane>
            <CheckBox fx:id="disabledCheckBox" mnemonicParsing="false" text="Заблокирован" GridPane.rowIndex="1"/>
        </GridPane>
    </GridPane>
</HBox>
