<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" minHeight="250.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="KeyboardTrainer.forms.controllers.ExerciseChooserController">
    <GridPane fx:id="treeParentGridPane" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="controlTestButton" mnemonicParsing="false" text="Пройти контрольный тест"
                GridPane.halignment="RIGHT"
                GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets right="5.0"/>
            </GridPane.margin>
        </Button>
    </GridPane>
    <Separator orientation="VERTICAL" prefWidth="0.0">
        <HBox.margin>
            <Insets left="5.0" right="5.0"/>
        </HBox.margin>
    </Separator>
    <GridPane fx:id="detailsParentGridPane" alignment="CENTER_RIGHT" GridPane.columnIndex="2" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Информация об упражнении" GridPane.halignment="CENTER" GridPane.valignment="TOP">
            <font>
                <Font size="18.0"/>
            </font>
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </Label>
        <GridPane GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="statisticsButton" mnemonicParsing="false" text="Статистика">
                <GridPane.margin>
                    <Insets left="1.0"/>
                </GridPane.margin>
            </Button>
            <Button fx:id="startExerciseButton" mnemonicParsing="false" text="Начать упражнение"
                    GridPane.columnIndex="1"
                    GridPane.halignment="RIGHT">
                <GridPane.margin>
                    <Insets right="10.0"/>
                </GridPane.margin>
            </Button>
        </GridPane>
    </GridPane>
</HBox>
