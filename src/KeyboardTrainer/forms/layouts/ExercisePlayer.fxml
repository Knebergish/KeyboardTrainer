<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="335.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="KeyboardTrainer.forms.controllers.exercise_player.ExercisePlayerController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <GridPane fx:id="gridPane">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="300.0" minHeight="300.0" prefHeight="300.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="35.0" minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Button fx:id="breakButton" disable="true" mnemonicParsing="false" onAction="#breakExercise" text="Прервать"
                    GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1"
                    GridPane.valignment="CENTER">
                <GridPane.margin>
                    <Insets right="5.0"/>
                </GridPane.margin>
            </Button>
            <CheckBox mnemonicParsing="false" text="Виртуальная клавиатура" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets left="10.0"/>
                </GridPane.margin>
            </CheckBox>
        </children>
    </GridPane>
</GridPane>
