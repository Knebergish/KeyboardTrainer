<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="gridPane" xmlns="http://javafx.com/javafx/8.0.172-ea"
          fx:controller="KeyboardTrainer.forms.controllers.exercise_player.ExercisePlayerController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Button fx:id="startButton" mnemonicParsing="false" onAction="#startExercise" text="Начать" textAlignment="CENTER"
            GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
    <Button fx:id="breakButton" disable="true" mnemonicParsing="false" onAction="#breakExercise" text="Прервать"
            GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
</GridPane>
