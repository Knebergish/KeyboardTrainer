<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="mainGridPane" prefHeight="335.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="KeyboardTrainer.forms.controllers.exercise.player.ExercisePlayerController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="335.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <GridPane fx:id="gridPane">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="300.0" minHeight="300.0" prefHeight="300.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="35.0" minHeight="35.0" prefHeight="35.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="breakButton" disable="true" mnemonicParsing="false" onAction="#breakExercise" text="Прервать"
                GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets bottom="10.0" right="10.0"/>
            </GridPane.margin>
        </Button>
        <CheckBox fx:id="virtualKeyboardCheckBox" focusTraversable="false" mnemonicParsing="false"
                  text="Виртуальная клавиатура" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0"/>
            </GridPane.margin>
        </CheckBox>
    </GridPane>
</GridPane>
